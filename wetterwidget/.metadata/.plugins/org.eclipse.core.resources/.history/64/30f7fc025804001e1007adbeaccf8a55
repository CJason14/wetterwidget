package com.wetterwidget.backend.facade;


import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;
import com.wetterwidget.backend.entities.*;

@RestController
@RequestMapping("/wetterdata")
@CrossOrigin
public class WetterDataController {
	
    @GetMapping("/preview")
    public String preview(@RequestParam(value = "name", defaultValue = "World") String name) {
    	Wetterdaten nDaten = new Wetterdaten();

        nDaten.setTemperatur_aktuell(10);
        nDaten.setTemperatur_gefuehlt(10);
        nDaten.setTemperatur_min(10);
        nDaten.setTemperatur_max(10);
        nDaten.setLuftdruck(10);
        nDaten.setLuftfeuchtigkeit(10);
        nDaten.setWind_geschwindigkeit(10);
        nDaten.setWind_richtung(10);
        nDaten.setBew√∂lkung(10);
      return String.format("Hello %s!", name);
    }
    
    @GetMapping("/city")
    public String city(@RequestParam(value = "name", defaultValue = "World") String name) {
      return String.format("Hello %s!", name);
    }
}
